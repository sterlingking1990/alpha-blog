<!DOCTYPE html>
<html>
<head>
	<title>First Page</title>
</head>
<body>
<h1>LIST OF ALL ARTICLES</h1>
<p><%= link_to "Create New Article" , new_article_path %> </p>
<table>
	<tr>
		<td>
		Title</td>
		<td>Description</td>
	</tr>
	
		<% @articles.each do |a| %>
		<tr>

			<td><%= a.title %></td>
			<td><%= a.description %></td>
			<td><%= link_to "Show", article_path(a.id) %></td>
			<td><%= link_to "Edit", edit_article_path(a.id) %> </td>
			<td><%= link_to "Comment", new_comment_path %> </td>

		<% end %>
</tr>
</table>
</body>
</html>